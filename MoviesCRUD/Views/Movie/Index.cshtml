@model IEnumerable<MoviesCRUD.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

@if(TempData["SuccessMessages"]!=null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessages"]
    </div>
}



<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table id="moviesTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieGenre)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.ImagePath)*@
                <img src="@item.ImagePath" height="100px" width="100px">
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.MovieId">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.MovieId">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MovieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#moviesTable').DataTable();
    });
</script>