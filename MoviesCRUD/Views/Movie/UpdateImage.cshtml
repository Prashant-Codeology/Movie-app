@model MoviesCRUD.Models.ViewModel.UploadImageVM
@{
    ViewData["Title"] = "Update Movie";
}

<h2>Update Movie</h2>

<div class="row">
    <div class="col-md-4">
        <img src="~/@Model.ImageURL" alt="Movie Image" class="img-fluid" />
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <form asp-controller="Movie" asp-action="UpdateImage" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="MovieId" />
         @*   <div class="form-group">
                <label for="newImageFile">Upload New Image</label>
                <input type="file" class="form-control-file" id="newImageFile" name="newImageFile" accept=".jpg,.jpeg,.png" />
            </div>*@
            <div class="form-group">
                <input type="file" asp-for="ImagePath" class="form-control" accept=".jpg,.jpeg,.png"/>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}